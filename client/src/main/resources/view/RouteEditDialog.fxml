<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.itmo.client.controller.RouteEditDialogController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <children>
        <GridPane hgap="10" vgap="10">
            <children>
                <Label text="Name" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Coordinates" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="coordinatesField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Creation Date" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="creationDateField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="From" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="fromField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="To" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="toField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Distance" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="distanceField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
        <HBox spacing="10" alignment="CENTER_RIGHT" styleClass="button-bar">
            <Button text="OK" onAction="#handleOk"/>
            <Button text="Cancel" onAction="#handleCancel"/>
        </HBox>
    </children>
</VBox>
